@model IEnumerable<ElHueco.Models.Producto>

@{
    ViewBag.Title = "Gestion de productos";
}

<div class="container" style="margin-top:20px;">

    <div class="row">
        <div class="col-lg-12 text-center">
            <h2>Gestion de Productos</h2>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-condensed">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.nombreProducto)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.precioVenta)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.costoProducto)
                </th>
                <th>@Html.DisplayNameFor(model => model.existencias)</th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.nombreProducto)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.precioVenta)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.costoProducto)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.existencias)
                    </td>
                    <td>
                        @Html.ActionLink("Editar", "Edit", new { id = item.id }, htmlAttributes: new { @class = "btn btn-warning"}  ) |
                        @Html.ActionLink("Detalles", "Details", new { id = item.id }, htmlAttributes: new { @class = "btn btn btn-info"}) |
                        @Html.ActionLink("Borrar", "Delete", new { id = item.id }, htmlAttributes: new { @class = "btn btn-danger"})
                    </td>
                </tr>
            }

        </table>
    </div>


    <div class="btn btn-default">
        @Html.ActionLink("Ingresar nuevo producto", "Create")
    </div>
</div>
